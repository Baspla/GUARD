extends layout
block append css
    link(rel='stylesheet', href='/sheets/neumorph.css')
block append scripts 
    script(src='/webauthn/index.umd.min.js')
    script(src='scripts/passkeyAdd.js')
block content
    .align-self-center.neumorph.px-5.py-4
        h1.fs-1.mt-2.mb-3 Passkey hinzufügen
        include errorWarning
        
        form.mb-3(method="post" action="/passkeyAdd")
            .mb-3
                label.form-label(for="passkeyName") Name für den Passkey
                input.form-control#passkeyName(name="passkeyName" type="text" placeholder="z.B. 'Mein Laptop' oder 'iPhone'" required)
                .form-text Geben Sie einen Namen ein, um diesen Passkey später zu identifizieren.

            .text-center.mb-4
                button.btn.btn-success.btn-lg#createPasskeyButton(type="button")
                    svg.bi.bi-fingerprint.me-2(xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16")
                        path(d="M8.06 6.5a.5.5 0 0 1 .5.5v.776a11.5 11.5 0 0 1-.552 3.519l-.803 2.365a.25.25 0 0 1-.472 0l-.803-2.365A11.5 11.5 0 0 1 5.5 7.276V7a.5.5 0 0 1 1 0v.776a10.5 10.5 0 0 0 .504 3.251l.4 1.18.4-1.18A10.5 10.5 0 0 0 8.06 7.776V7z")
                        path(d="M6.25 9.037V9a.75.75 0 1 1 1.5 0v.037a1.75 1.75 0 0 1-.532 1.25l-.781.781a.25.25 0 0 1-.354 0l-.781-.781A1.75 1.75 0 0 1 6.25 9.037z")
                        path(d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5 2 2 0 0 1-2 2H4a2 2 0 0 1-2-2zM3 4a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-.5H3V4z")
                    | Passkey erstellen

            .passkey-creation-status#creationStatus.d-none
                .alert.alert-primary(role="alert")
                    .d-flex.align-items-center
                        .spinner-border.spinner-border-sm.me-3(role="status")
                        div Passkey wird erstellt...

        .mt-4
            a.btn.btn-outline-secondary(href="/passkeymanage") Zurück zur Übersicht
            a.btn.btn-outline-secondary.ms-2(href="/") Zum Dashboard
